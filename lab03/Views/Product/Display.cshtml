@model lab03.Models.Product

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-primary mb-4">Product Details</h2>

        <div class="row mb-3">
            <div class="col-md-8">
                <h4><strong>Name:</strong> @Model.Name</h4>
                <h4><strong>Price:</strong> $@Model.Price</h4>
                <h5><strong>Description:</strong></h5>
                <p>@Model.Description</p>
            </div>

            <div class="col-md-4 d-flex justify-content-center align-items-center">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="~/images/@Model.ImageUrl" alt="Product Image"
                         class="img-fluid rounded"
                         style="max-width: 100%; height: auto; object-fit: contain;" />
                }
                else
                {
                    <span>No image available</span>
                }
            </div>

        </div>

        <div class="mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary">← Back to List</a>
        </div>
    </div>
</div>
<style>
    .card {
        background-color: #e6f2ff; /* nền xanh dương nhạt */
        border-radius: 12px;
        box-shadow: 0 6px 12px rgba(0, 102, 204, 0.15);
        padding: 30px;
        color: #003366;
        font-family: Arial, sans-serif;
    }

    h2.text-primary {
        color: #0059b3 !important;
        font-weight: 700;
    }

    h4, h5 {
        color: #003366;
        font-weight: 600;
        margin-bottom: 10px;
    }

    p {
        font-size: 1rem;
        line-height: 1.5;
        color: #004080;
        margin-bottom: 20px;
    }

    img.img-fluid.rounded {
        border: 1.5px solid #99ccff;
        border-radius: 8px;
        background-color: #f0f8ff;
        max-height: 300px;
    }

    .btn-outline-secondary {
        color: #0059b3;
        border-color: #99ccff;
        font-weight: 600;
        padding: 10px 25px;
        transition: background-color 0.3s ease, color 0.3s ease;
        border-radius: 8px;
    }

        .btn-outline-secondary:hover {
            background-color: #0059b3;
            color: white;
            border-color: #004080;
            text-decoration: none;
        }
</style>