@model lab03.Models.Product
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Add Product";
}
<h2>Add Product</h2>

<form asp-action="Add" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
<textarea asp-for="Description" class="form-control"></textarea>

        <span asp-validation-for="Description" class="text-
danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories"
                class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl">Product Image</label>
        <input type="file" asp-for="ImageUrl" class="form-control" />
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Add</button>
    </div>
</form>
<style>
    form {
        background-color: #e6f2ff; /* nền xanh dương nhạt */
        padding: 25px 30px;
        border-radius: 10px;
        max-width: 600px;
        margin: 20px auto;
        box-shadow: 0 4px 8px rgba(0, 102, 204, 0.1);
        color: #003366; /* chữ xanh đậm */
        font-family: Arial, sans-serif;
    }

        form h2 {
            text-align: center;
            margin-bottom: 25px;
            color: #004080;
            font-weight: 700;
        }

    .form-group {
        margin-bottom: 18px;
    }

    label {
        font-weight: 600;
        color: #0059b3;
        display: block;
        margin-bottom: 6px;
    }

    input.form-control,
    select.form-control,
    textarea.form-control {
        border: 1.5px solid #99ccff;
        border-radius: 6px;
        padding: 10px 12px;
        font-size: 1rem;
        color: #003366;
        background-color: #f9fbff;
        transition: border-color 0.3s ease;
        width: 100%;
    }

        input.form-control:focus,
        select.form-control:focus,
        textarea.form-control:focus {
            border-color: #0059b3;
            outline: none;
            background-color: #ffffff;
            box-shadow: 0 0 8px #99ccff;
        }

    .text-danger {
        color: #cc0000 !important;
        font-weight: 600;
        margin-top: 4px;
        display: block;
        font-size: 0.9rem;
    }

    button.btn-primary {
        background-color: #0059b3;
        border-color: #004080;
        font-weight: 700;
        padding: 10px 18px;
        width: 100%;
        font-size: 1.1rem;
        transition: background-color 0.3s ease;
    }

        button.btn-primary:hover {
            background-color: #003366;
            border-color: #002244;
        }
</style>