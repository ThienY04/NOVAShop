@model IEnumerable<lab03.Models.Product>
@{
    ViewData["Title"] = "Home Page";
    int numOfQuantity = 1;
}

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4">
            @foreach (var item in Model)
            {
                <div class="col mb-4">
                    <div class="card shadow-sm border-light rounded">
                        <!-- Image: Ensuring the image fills the card without being cut -->
                        <img src="@Url.Content("~/images/" + item.ImageUrl)" class="card-img-top" alt="..."
                             style="object-fit: contain; width: 100%; height: 200px;">

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-center mb-2">@Html.DisplayFor(modelItem => item.Name)</h5>

                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-muted">Price</span>
                                <p class="fw-bold">@item.Price.ToString("#,##0") Vnđ</p>
                            </div>

                            <div class="mt-auto">
                                <a asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-productId="@item.Id" asp-route-quantity="@numOfQuantity">
                                    <button class="btn btn-dark w-100">
                                        <i class="bi bi-cart-fill me-1"></i> Add to Cart
                                    </button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <style>
        /* Nền section xanh dương nhạt */
        section.py-5 {
            background-color: #e6f2ff;
        }

        /* Card nền trắng với viền xanh nhạt và bóng nhẹ */
        .card {
            background-color: #ffffff;
            border: 1px solid #99ccff;
            box-shadow: 0 4px 6px rgba(0, 102, 204, 0.1);
            border-radius: 8px;
            transition: transform 0.2s ease;
        }

            /* Hover card nhẹ nâng lên */
            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 12px rgba(0, 102, 204, 0.2);
            }

        /* Tiêu đề sản phẩm màu xanh đậm */
        .card-title {
            color: #003366;
            font-weight: 600;
            font-size: 1.25rem;
        }

        /* Giá tiền màu xanh dương đậm */
        .text-muted {
            color: #0059b3 !important;
            font-weight: 600;
        }

        /* Giá sản phẩm đậm */
        .fw-bold {
            color: #003366;
            font-size: 1.1rem;
        }

        /* Nút "Add to Cart" nền xanh dương đậm, chữ trắng */
        .btn-dark {
            background-color: #0059b3;
            border-color: #004080;
            color: #fff;
            font-weight: 600;
            transition: background-color 0.3s ease;
        }

            .btn-dark:hover {
                background-color: #003366;
                border-color: #002244;
                color: #fff;
            }

        /* Ảnh sản phẩm giữ tỉ lệ, nền trắng */
        .card-img-top {
            background-color: #f0f8ff;
        }
    </style>
</section>

