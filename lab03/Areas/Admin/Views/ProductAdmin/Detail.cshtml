@model lab03.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<h2 class="mb-4">Chi tiết sản phẩm</h2>

<!-- Thông tin chung -->
<div class="row mb-4">
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="~/images/@Model.ImageUrl" alt="Ảnh sản phẩm" class="img-fluid rounded shadow-sm" />
        }
        else
        {
            <div class="text-muted">Không có ảnh</div>
        }
    </div>
    <div class="col-md-8">
        <h4 class="text-primary">@Model.Name</h4>
        <p><strong>Giá:</strong> @Model.Price.ToString("n0")₫</p>
        <p><strong>Danh mục:</strong> @Model.Category?.Name</p>
        <p><strong>Mô tả:</strong><br /> @Model.Description</p>
    </div>
</div>

<!-- Biến thể sản phẩm -->
<h5 class="mt-5 mb-3">Biến thể sản phẩm</h5>

@if (Model.Variants != null && Model.Variants.Any())
{
    <table class="table table-bordered text-center">
        <thead class="table-light">
            <tr>
                <th>Màu sắc</th>
                <th>Kích cỡ</th>
                <th>Số lượng trong kho</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var variant in Model.Variants)
            {
                <tr>
                    <td>@variant.Color</td>
                    <td>@variant.Size</td>
                    <td>@variant.Stock</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">Chưa có biến thể sản phẩm.</p>
}

<!-- Ảnh phụ -->
@if (Model.Images != null && Model.Images.Any())
{
    <h5 class="mt-5 mb-3">Ảnh phụ</h5>
    <div class="d-flex flex-wrap gap-3">
        @foreach (var img in Model.Images)
        {
            <img src="~/images/@img.Url" alt="Ảnh phụ" class="img-thumbnail" style="max-width: 150px;" />
        }
    </div>
}

<!-- Nút điều hướng -->
<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
    <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">Chỉnh sửa</a>
</div>
