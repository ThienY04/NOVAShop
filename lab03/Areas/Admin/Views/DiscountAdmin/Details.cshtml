@model lab03.Models.Discount

@{
    ViewData["Title"] = "Chi tiết mã giảm giá";
}

<div class="container py-4">
    <h2 class="mb-4 fw-bold text-primary">
        <i class="bi bi-info-circle-fill me-2"></i>Chi tiết mã giảm giá
    </h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-4">Mã giảm giá</dt>
                <dd class="col-sm-8">@Model.Code</dd>

                <dt class="col-sm-4">Giá trị giảm (%)</dt>
                <dd class="col-sm-8">@Model.Value.ToString("n0")%</dd>

                <dt class="col-sm-4">Ngày hết hạn</dt>
                <dd class="col-sm-8">
                    @(Model.ExpiryDate == DateTime.MinValue
                        ? "Không giới hạn"
                        : Model.ExpiryDate.ToString("dd/MM/yyyy"))
                </dd>

                <dt class="col-sm-4">Trạng thái</dt>
                <dd class="col-sm-8">
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Đang hoạt động</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Không hoạt động</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning me-2">
            <i class="bi bi-pencil-fill"></i> Chỉnh sửa
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại danh sách
        </a>
    </div>
</div>
